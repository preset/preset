{
	"compilerOptions": {
		"module": "esnext",
		"baseUrl": ".",
		"target": "es2020",
		"lib": ["esnext"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node"
		],
		"paths": {
			"@preset/core": ["./packages/core/src/index.ts"],
			"@preset/core/globals": ["./packages/core/globals.d.ts"]
		}
	},
	"include": [
		"./*.ts",
		"./packages/**/*.ts"
	],
	"exclude": ["**/bin/**", "**/dist/**", "node_modules", "packages/cli/init/templates/**"]
}
