{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
    ]
  },
  "include": [
    "./*.ts",
    "./packages/**/*.ts"
  ],
  "exclude": ["**/dist/**", "node_modules"]
}
