{
	"name": "@preset/monorepo",
	"type": "module",
	"private": true,
	"scripts": {
		"release": "bumpp package.json packages/*/package.json --all --commit \"release: v\"",
		"build": "bun run --filter '*' build",
		"prerelease": "bun run fmt && bun run lint",
		"fmt": "dprint fmt",
		"lint": "oxlint lint",
		"lint:fix": "oxlint lint --fix",
		"test": "vitest --run",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:serve": "vitepress serve docs",
		"ci": "bun run build && bun run test"
	},
	"devDependencies": {
		"@fontsource-variable/rubik": "catalog:",
		"@iconify-json/mdi": "catalog:",
		"@preset/core": "workspace:*",
		"@types/bun": "catalog:",
		"@types/node": "catalog:",
		"bumpp": "catalog:",
		"dprint": "catalog:",
		"obuild": "catalog:",
		"oxlint": "^1.47.0",
		"typescript": "catalog:",
		"unocss": "catalog:",
		"vite": "catalog:",
		"vitepress": "catalog:",
		"vitest": "catalog:",
		"vue": "catalog:"
	},
	"workspaces": {
		"packages": [
			"packages/*",
			"!**/test/**"
		],
		"catalog": {
			"@fontsource-variable/rubik": "^5.0.22",
			"@iconify-json/mdi": "^1.2.3",
			"@types/bun": "^1.3.9",
			"@types/debug": "^4.1.12",
			"@types/fs-extra": "^11.0.4",
			"@types/node": "^25.2.3",
			"@types/semver": "^7.5.8",
			"@types/update-notifier": "^6.0.8",
			"bumpp": "^10.4.1",
			"cac": "^6.7.14",
			"chalk": "^5.3.0",
			"debug": "^4.3.5",
			"deepmerge": "^4.3.1",
			"detect-indent": "^7.0.1",
			"dprint": "^0.51.1",
			"esbuild": "^0.21.5",
			"execa": "^9.2.0",
			"fast-glob": "^3.3.2",
			"fs-extra": "^11.2.0",
			"log-update": "^6.0.0",
			"mitt": "^3.0.1",
			"obuild": "^0.4.27",
			"semver": "^7.6.2",
			"simple-git": "^3.25.0",
			"sisteransi": "^1.0.5",
			"type-fest": "^4.20.1",
			"typescript": "^5.9.3",
			"unconfig": "^0.4.4",
			"unocss": "^0.61.0",
			"unset-value": "^2.0.1",
			"update-notifier": "^7.0.0",
			"vite": "^7.3.1",
			"vitepress": "1.6.4",
			"vitest": "^4.0.18",
			"vue": "^3.5.28"
		}
	}
}
