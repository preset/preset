{
  "name": "@preset/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter ./packages run build",
    "build:cli": "pnpm -C ./packages/cli run build",
    "build:core": "pnpm -C ./packages/core run build",
    "lint": "eslint **/*.ts",
    "test": "pnpm -C ./packages/core run test",
    "docs:dev": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:serve": "pnpm -C docs run serve",
    "release": "bumpp packages/*/package.json --push --tag --commit \"release: v\""
  },
  "devDependencies": {
    "@innocenzi/eslint-config": "^0.12.0",
    "@preset/core": "workspace:*",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "bumpp": "^8.2.1",
    "eslint": "8.21.0",
    "esno": "^0.16.3",
    "tsup": "^6.2.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.20.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  }
}
