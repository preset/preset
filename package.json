{
  "name": "@preset/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter ./packages run build",
    "build:cli": "pnpm -C ./packages/cli run build",
    "build:core": "pnpm -C ./packages/core run build",
    "lint": "eslint **/*.ts",
    "test": "pnpm -C ./packages/core run test",
    "docs:dev": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:serve": "pnpm -C docs run serve",
    "release": "bumpp packages/*/package.json --push --tag --commit \"release: v\""
  },
  "devDependencies": {
    "@innocenzi/eslint-config": "^0.9.2",
    "@preset/core": "workspace:*",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "bumpp": "^7.1.1",
    "eslint": "8.10.0",
    "esno": "^0.14.1",
    "tsup": "^5.12.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vitest": "^0.6.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  }
}
